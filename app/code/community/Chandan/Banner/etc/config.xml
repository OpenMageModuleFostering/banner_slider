<?xml version="1.0"?>
<config>
    <modules>
        <Chandan_Banner>
            <version>1.0.0</version>
        </Chandan_Banner>
    </modules>
    <frontend>
        <routers>
            <banner>
                <use>standard</use>
                <args>
                    <module>Chandan_Banner</module>
                    <frontName>banner</frontName>
                </args>
            </banner>
        </routers>
        <layout>
            <updates>
                <banner>
                    <file>banner.xml</file>
                </banner>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<banner>
				<use>admin</use>
				<args>
					<module>Chandan_Banner</module>
					<frontName>banner</frontName>
				</args>
			</banner>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<banner module="banner">
				<title>Banner</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="banner">
						<title>Manage Banner</title>
						<sort_order>0</sort_order>
						<action>banner/adminhtml_banner</action>
					</items>
				</children>
			</banner>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					 <children>
						  <banner module="banner">
							<title>Banner</title>
							<sort_order>71</sort_order>               
							<children>
								<items module="banner">
									<title>Manage Banner</title>
									<sort_order>0</sort_order>
									<action>banner/adminhtml_banner</action>
								</items>
							</children>
						</banner>
					
						<system>
							<children>
								<config>
									<children>
										<chandan>
											<title>Banner - All</title>
										</chandan>
									</children>
								</config>
							</children>
						</system>
					</children>				
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<banner>
					<file>banner.xml</file>
				</banner>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <banner>
                <class>Chandan_Banner_Model</class>
                <resourceModel>banner_mysql4</resourceModel>
            </banner>
            <banner_mysql4>
                <class>Chandan_Banner_Model_Mysql4</class>
                <entities>
                    <banner>
                        <table>banner</table>
                    </banner>
                </entities>
            </banner_mysql4>
        </models>
        <resources>
            <banner_setup>
                <setup>
                    <module>Chandan_Banner</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </banner_setup>
            <banner_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </banner_write>
            <banner_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </banner_read>
        </resources>
        <blocks>
            <banner>
                <class>Chandan_Banner_Block</class>
            </banner>
        </blocks>
        <helpers>
            <banner>
                <class>Chandan_Banner_Helper</class>
            </banner>
        </helpers>
    </global>
</config>