<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <chandan translate="label" module="banner">
            <label>Banner Setting</label>
            <sort_order>100</sort_order>
        </chandan>
    </tabs>
    <sections>
        <chandan translate="label" module="banner">
            <label>Banner Options</label>
            <tab>chandan</tab>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
 
            <groups>
                <chandan_group translate="label" module="banner">
                    <label>Banner Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
 
                    <fields>
					
						<chandan_select translate="label">
                            <label>Banner Status: </label>                            
                            <frontend_type>select</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </chandan_select>
						
						<chandan_title_style translate="label">
                            <label>Title Text Style: </label>                            
                            <frontend_type>textarea</frontend_type>
							<comment> border-radius:5px;color:#f1db78;font-size: 14px;   font-weight: bold;</comment>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </chandan_title_style>
						
						<chandan_content_style translate="label">
                            <label>Content Text Style :</label>
                            <comment> border-radius:5px;color:#f1db78;font-size: 14px;   font-weight: bold;</comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </chandan_content_style>
						
                        <chandan_btn_text translate="label">
                            <label>Buy Now Button Text: </label>
                            <comment>SHOP Now</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </chandan_btn_text>
						
						<chandan_btn_style translate="label">
                            <label>Buy Now Button Style: </label>                            
                            <frontend_type>textarea</frontend_type>
							<comment> border-radius:5px;color:#f1db78;font-size: 14px;   font-weight: bold;</comment>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </chandan_btn_style>
						
                    </fields>
                </chandan_group>
            </groups>
        </chandan>
    </sections>
</config>